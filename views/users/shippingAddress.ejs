            <div class="container">
                <div class="form-container">
                    <br>
                    <h4 class="container"><strong>Add New Address</strong></h4>
                    <br>
                    <form class="container" action="/shippingDetails/<%= user._id %>" method="post">
                        <div>
                            <label for="name">Name:</label>
                            <input type="text" id="name" name="name" required>
                        </div>

                        <div>
                            <label for="houseName">House Name:</label>
                            <input type="text" id="houseName" name="houseName" required>
                        </div>

                        <div>
                            <label for="place">Place:</label>
                            <input type="text" id="place" name="place" required>
                        </div>

                        <div>
                            <label for="city">City:</label>
                            <input type="text" id="city" name="city" required>
                        </div>

                        <div>
                            <label for="district">District:</label>
                            <input type="text" id="district" name="district" required>
                        </div>

                        <div>
                            <label for="state">State:</label>
                            <input type="text" id="state" name="state" required>
                        </div>

                        <div>
                            <label for="pinCode">Pin Code:</label>
                            <input type="text" id="pinCode" name="pinCode" required>
                        </div>

                        <div>
                            <label for="phoneNumber">Phone Number:</label>
                            <input type="text" id="phoneNumber" name="phoneNumber" required>
                        </div>

                        <button type="submit">Submit</button>
                    </form>
                </div>

                <div class="previous-addresses">
                    <h5><strong>Previous Addresses:</strong></h5>
                    <br>
                    <% if (order && order.shippingAddress) { %>
                        <% for(i=0;i<order.shippingAddress.length;i++){%>
                            <div>
                                <label>
                                    <input type="radio" name="shippingAddress" value="<%= i %>" <% if (i===0) {
                                        %>checked<% } %>>
                                        Address <%= i+1 %>
                                            <p>
                                                <strong>
                                                    <%= order.shippingAddress[i].name %>
                                                </strong>, <%= order.shippingAddress[i].houseName %>,
                                                    <%= order.shippingAddress[i].place %> PO, <%=
                                                            order.shippingAddress[i].city %>, <%=
                                                                order.shippingAddress[i].district %>,
                                                                <%= order.shippingAddress[i].state %>
                                                                    <br>
                                                                    PIN: <%= order.shippingAddress[i].pinCode %>
                                                                        <br>
                                                                        Phone: <%= order.shippingAddress[i].phoneNumber
                                                                            %>
                                            </p>
                                </label>
                                <a href="/home/updateShippingAddress/<%= user._id %>?addressIndex=<%= i %>">
                                    <button class="btn btn-success">Edit</button>
                                </a>
                                <a href="/home/deleteShippingAddress?addressIndex=<%= i %>">
                                    <button class="btn btn-danger">Delete</button>
                                </a>
                            </div>
                            <% } %>
                                <% } %>
                                    <br>
                                    <a href="/home/shopingCart/<%= cart._id %>"><button class="btn btn-outline-info">
                                            Go to Cart
                                        </button>
                                    </a>
                </div>
            </div>

