<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Gadgets Heaven</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/magiczoom/magiczoom.css">
</head>

<body>
    <div class="container">
        <br>
        <% if(startDate> endDate){%>
            <h3 class="text-center" style="color: red;">Please Enter Valid Dates</h3>
            <%}else{%>
                <h3 class="text-center" style="background-color: blanchedalmond;"><strong>Gadgets Heaven</strong> - The
                    One Place For All Gadgets</h3>
                <br>
                <h4 class="text-center text-danger">Sales Report From <strong>
                        <%= startDate %>
                    </strong> to <strong>
                        <%= endDate %>
                    </strong></h4>
                <br>
                <table class="container text-center" style="border-collapse: collapse; width: 100%;">
                    <thead>
                        <tr>
                            <th style="border: 2px solid #000000; padding: 8px;">Si.No:</th>
                            <th style="border: 2px solid #000000; padding: 8px;">Product Name</th>
                            <th style="border: 2px solid #000000; padding: 8px;">Price</th>
                            <th style="border: 2px solid #000000; padding: 8px;">Customer</th>
                            <th style="border: 2px solid #000000; padding: 8px;">Shipping Address</th>
                            <th style="border: 2px solid #000000; padding: 8px;">Date</th>
                            <th style="border: 2px solid #000000; padding: 8px;">Quantity</th>
                            <th style="border: 2px solid #000000; padding: 8px;">Total Price</th>
                            <th style="border: 2px solid #000000; padding: 8px;">Payment</th>
                            <th style="border: 2px solid #000000; padding: 8px;">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let siNo=1 %>
                            <% orderData.forEach(order=> {
                                order.purchasedProducts.forEach(product => {
                                const productDate = product.date.toISOString().slice(0, 10);
                                if (startDate <= productDate && endDate>= productDate) { %>
                                    <tr>
                                        <td style="border: 2px solid #000000; padding: 8px;">
                                            <%= siNo %>
                                        </td>
                                        <td style="border: 2px solid #000000; padding: 8px;">
                                            <%= product.product.title %>
                                        </td>
                                        <td style="border: 2px solid #000000; padding: 8px;">₹<%= product.product.price
                                                %>
                                        </td>
                                        <td style="border: 2px solid #000000; padding: 8px;">
                                            <%= product.userName %>
                                        </td>
                                        <td style="border: 2px solid #000000; padding: 8px;">
                                            <strong>
                                                <%= product.address.name %>
                                            </strong>
                                            <br>
                                            <%= product.address.houseName %>,
                                                <%= product.address.place %> PO,
                                                    <%= product.address.city %>,
                                                        <br>
                                                        <%= product.address.district %>,
                                                            <%= product.address.state %>,
                                                                <strong>PIN:<%= product.address.pinCode %></strong>
                                                                <br>
                                                                <strong>Phone:<%= product.address.phoneNumber %>
                                                                </strong>
                                        </td>
                                        <td style="border: 2px solid #000000; padding: 8px;">
                                            <%= product.date.toLocaleDateString() %>
                                                <br>
                                                <%= product.date.toLocaleTimeString() %>
                                        </td>
                                        <td style="border: 2px solid #000000; padding: 8px;">
                                            <%= product.quantity %>
                                        </td>
                                        <td style="border: 2px solid #000000; padding: 8px;"><strong>₹<%=
                                                    product.quantity * product.product.price %></strong></td>
                                        <td style="border: 2px solid #000000; padding: 8px;">
                                            <%= product.paymentMethod %>
                                        </td>
                                        <td style="border: 2px solid #000000; padding: 8px;">
                                            <% if (product.status) { %>
                                                <strong>
                                                    <%= product.status %>
                                                </strong>
                                                <% if (product.status==="Delivered" && product.deliveredDate) { %>
                                                    <br>
                                                    <%= product.deliveredDate.toLocaleDateString() %>
                                                        <br>
                                                        <%= product.deliveredDate.toLocaleTimeString() %>
                                                            <% } %>
                                                                <% } %>
                                        </td>
                                    </tr>
                                    <% siNo++ %>
                                        <% } }); }); %>
                    </tbody>
                </table>
                <%} %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"
        integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"
        integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ"
        crossorigin="anonymous"></script>
    <script src="/magiczoom/magiczoom.js"></script>
</body>

</html>